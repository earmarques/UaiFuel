
@model UpdateCombustivelViewModel

<form asp-controller="Combustivel" asp-action="Update" method="POST">
    <div class="container">
        <div class="wrapper">
            <h2 style="margin-bottom:2rem;">Edição de Combustível</h2>
            @if (ViewBag.ErrorMessages != null)
            {
                @Html.Raw(ViewBag.ErrorMessages);
            }
            else if (ViewBag.Message != null)
            {
                <div class="@ViewBag.CssClass">
                    @ViewBag.Message
                </div>
            }
            <div class="content">
                <div class="tab_wrap" style="display: block;">
                    <div class="form-group mb-3 row">
                        <label class="col-md-3 col-form-label" asp-for="Posto">
                            Posto
                        </label>
                        <div class="col-sm-6">
                            <input readonly="readonly" asp-for="Posto" class="form-control input-sm mb-3" />
                            <span asp-validation-for="Posto"></span>
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-md-3 col-form-label" asp-for="Nome">
                            Nome
                            <span class="required">*</span>
                        </label>
                        <div class="col-sm-6">
                            <input asp-for="Nome" class="form-control input-sm mb-3" />
                            <span asp-validation-for="Nome"></span>
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-md-3 col-form-label">
                            Status
                            <span class="required">*</span>
                        </label>
                        <div class="col-sm-6">
                            <select asp-for="CodigoStatus" class="custom-select form-select-lg mb-3">
                                <option value="">Selecione</option>
                                @foreach (var status in @Model.Statuses)
                                {
                                    <option value="@status.Value">@status.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CodigoStatus"></span>
                        </div>
                    </div>
                </div>
            </div>
            <button style="margin-top:2rem;" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>



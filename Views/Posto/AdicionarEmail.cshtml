
@model EmailViewModel

<form asp-controller="Posto" asp-action="AdicionarEmail" method="POST">
    <h2>Adicionar E-mail</h2>
    <br />
    @if (ViewBag.Message != null)
    {
        <div class="@ViewBag.CssClass">
            @ViewBag.Message
        </div>
    }
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input asp-for="Id" readonly="readonly" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" readonly="readonly" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NovoEmail">Endereço de E-mail</label>
        <input asp-for="NovoEmail" class="form-control" />
    </div>

    <button class="btn btn-primary">Adicionar</button>
</form>


